<%# Uses rails_bootstrap_form gem.  i.e.:

  bootstrap_form_for(workflow) do |f|

API at: https://github.com/bootstrap-ruby/rails-bootstrap-forms %>

<%= f.text_field :account,
        label: t('clustercomposer.options_account_title'),
        help: t('clustercomposer.options_account_help') if Configuration.show_cluster_options_account_field?
%>

<% if Workflow.show_cluster_arrays? %>
<%= f.text_field :cluster_array_request,
        label: t('clustercomposer.options_array_title'),
        help: Workflow.not_all_clusters_support_cluster_arrays ?
                  t('clustercomposer.options_array_help_with_clusters',
                      cluster_list: Workflow.clusters_not_supporting_cluster_arrays.join(', '))
                  :
                  t('clustercomposer.options_array_help'),
        placeholder: '1-10'
%>
<% end %>
