{
    "location": "variables.location",
    "resource_group": "variables.resource_group",
    "install_from": "fqdn.ood",
    "admin_user": "hpcadmin",
    "variables": {
        "image": "OpenLogic:CentOS:7.7:latest",
        "hpc_image": "OpenLogic:CentOS-HPC:7.7:latest",
        "interactive_vm_type": "Standard_D8s_v3",
        "viz_vm_type": "Standard_HB60rs",
        "compute_vm_type": "Standard_HB60rs",
        "location": "westeurope",
        "resource_group": "<NOT-SET>",
        "compute_image_name": "ood-compute",
        "interactive_image_name": "ood-interactive",
        "viz_image_name": "ood-viz",
        "image_resource_group": "variables.resource_group"
    },
    "vnet": {
        "name": "hpcvnet",
        "address_prefix": "10.2.0.0/20",
        "subnets": {
            "hpc": "10.2.0.0/22"
        }
    },
    "resources": {
        "master-compute": {
            "type": "vm",
            "vm_type": "variables.compute_vm_type",
            "image": "variables.hpc_image",
            "subnet": "hpc",
            "tags": [
                "nfsclient",
                "cndefault",
                "localuser",
                "munge",
                "slurmclient",
                "disable-selinux",
                "cvmfs",
                "deprovision"
            ]
        },
        "master-interactive": {
            "type": "vm",
            "vm_type": "variables.interactive_vm_type",
            "image": "variables.image",
            "subnet": "hpc",
            "tags": [
                "nfsclient",
                "cndefault",
                "localuser",
                "munge",
                "slurmclient",
                "disable-selinux",
                "install-jupyter-app-deps",
                "install-theia-deps",
                "cvmfs",
                "deprovision"
            ]
        },
        "master-viz": {
            "type": "vm",
            "vm_type": "variables.viz_vm_type",
            "availability_set": "compute",
            "image": "variables.hpc_image",
            "subnet": "hpc",
            "tags": [
                "nfsclient",
                "cndefault",
                "localuser",
                "munge",
                "slurmclient",
                "disable-selinux",
                "install-interactive-desktop-deps",
                "cvmfs",
                "deprovision"
            ]
        }
    },
    "install": [
        {
            "script": "disable-selinux.sh",
            "tag": "disable-selinux",
            "sudo": true
        },
        {
            "script": "cndefault.sh",
            "tag": "cndefault",
            "sudo": true
        },
        {
            "script": "nfsclient.sh",
            "args": [
                "ood"
            ],
            "tag": "nfsclient",
            "sudo": true
        },
        {
            "script": "localuser.sh",
            "args": [
                "ood"
            ],
            "tag": "localuser",
            "sudo": true
        },
        {
            "script": "munge.sh",
            "tag": "munge",
            "args": [
                "abcdefghijklmnopqrstuvwxyz123456"
            ],
            "sudo": true
        },
        {
            "script": "install-interactive-desktop-deps.sh",
            "tag": "install-interactive-desktop-deps",
            "sudo": true
        },
        {
            "script": "install-jupyter-app-deps.sh",
            "tag": "install-jupyter-app-deps",
            "sudo": true
        },
        {
            "script": "install-theia-deps.sh",
            "tag": "install-theia-deps",
            "sudo": true
        },
        {
            "script": "slurmd.sh",
            "tag": "slurmclient",
            "sudo": true
        },
        {
            "script": "cvmfs-azure.demo.sh",
            "tag": "cvmfs",
            "sudo": true
        },
        {
            "script": "deprovision.sh",
            "tag": "deprovision",
            "sudo": true
        },
        {
            "type": "local_script",
            "script": "create_image.sh",
            "args": [
               "variables.resource_group",
               "master-compute",
               "variables.compute_image_name",
               "variables.image_resource_group"
            ]
        },
        {
            "type": "local_script",
            "script": "create_image.sh",
            "args": [
               "variables.resource_group",
               "master-interactive",
               "variables.interactive_image_name",
               "variables.image_resource_group"
            ]
        },
        {
            "type": "local_script",
            "script": "create_image.sh",
            "args": [
               "variables.resource_group",
               "master-viz",
               "variables.viz_image_name",
               "variables.image_resource_group"
            ]
        }  
    ]
}